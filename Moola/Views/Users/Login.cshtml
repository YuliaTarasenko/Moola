@model Account

@{
    ViewData["Title"] = "Login";
}

<div class="col-md-6 m-auto">
    <form class="myForm" asp-controller="Users" asp-action="Login">
        @Html.HiddenFor(account => account.Id)
        <div class="mb-3">
            <label class="form-label">Your Login</label>
            <input asp-for="Login" class="form-control" />
        </div>
        <div class="mb-3">
            <label class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control">            
        </div>
        <div class="btn-group">
            <button class="btn myButtonBig" type="submit" style="margin-bottom:20px">Log in</button>
        </div>
    </form>
</div>
