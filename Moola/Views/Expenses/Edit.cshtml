@model Expense

@{
    ViewData["Title"] = "Edit Expense";
    var categories = Ctx.Categories.Where(c => c.Type == "Expense").Select(c => new ValueTuple<int, string>(c.Id, c.Name)).ToList();
    var accounts = Ctx.Accounts.Select(a => new ValueTuple<int, string>(a.Id, a.AccountName)).ToList();
}

<div class="col-md-6 card p-3 mx-auto">
    <h2>Edit Expense</h2>
        <form asp-action="Edit" method="post">
        @Html.HiddenFor(expense => expense.Id)
            <div class="form-group">
                <label asp-for="Amount">Amount</label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    @foreach (var c in categories)
                    {
                        <option value="@c.Item1">@c.Item2</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountId">Account</label>
                <select asp-for="AccountId" class="form-select">
                    @foreach (var a in accounts)
                    {
                        <option value="@a.Item1">@a.Item2</option>
                    }
                </select>
                <span asp-validation-for="AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note">Note</label>
                <textarea asp-for="Note" class="form-control" rows="3">Note</textarea>/>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseDate">Date</label>
                <input asp-for="ExpenseDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ExpenseDate" class="text-danger"></span>
            </div>
            <input type="submit" value="Save" class="btn btn-primary" />
        </form>
</div>
