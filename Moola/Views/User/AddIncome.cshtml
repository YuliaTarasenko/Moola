@model Income
@inject MyContext Ctx

@{
    ViewData["Title"] = "Add new Income";
    var category = Ctx.Categories.Where(c => c.Type == "Income").ToList();
    var account = Ctx.Accounts.ToList();
}

<div class="col-md-6 card p-3 mx-auto">
    <h2>Add new Income</h2>
    <form asp-action="AddIncome" method="post">
        <div class="form-group">
            <label asp-for="Amount">Amount</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category">Category</label>
            <select asp-for="Category" class="form-select">
                @foreach(var c in category)
                {
                    <option value="@c.Id">@c.Name</option>
                }
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="Account">Account</label>
                <select asp-for="Account" class="form-select">
                @foreach (var a in account)
                {
                    <option value="@a.Id">@a.AccountName</option>
                }
                </select>
        </div>
        <div class="form-group">
            <label asp-for="Note">Note</label>
            <textarea asp-for="Note" class="form-control" id="exampleFormControlTextarea1" rows="3">Note</textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IncomeDate">Date</label>
            <input asp-for="IncomeDate" class="form-control" type="date"/>
            <span asp-validation-for="IncomeDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-5">Add</button>
    </form>
</div>

