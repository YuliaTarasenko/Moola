@model Income
@inject MyContext Ctx

@{
    ViewData["Title"] = "Add new Income";
    var categories = Ctx.Categories.Where(c => c.Type == "Income").Select(c => new ValueTuple<int, string>(c.Id, c.Name)).ToList();
    var accounts = Ctx.Accounts.Select(a => new ValueTuple<int, string>(a.Id, a.AccountName)).ToList();
}

<div class="col-md-6 card p-3 mx-auto">
    <h2>Add new Income</h2>
    <form asp-action="AddIncome" method="post">
        <div class="form-group">
            <label asp-for="Amount">Amount</label>
            <input asp-for="Amount" class="form-control" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Category">Category</label>
            <select asp-for="Category" class="form-control">
                @foreach(var c in categories)
                {
                    <option value="@c.Item1">@c.Item2</option>
                }
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>
        <div class="form-group">
                <label asp-for="Account">Account</label>
                <select asp-for="Account" class="form-control">
                @foreach (var a in accounts)
                {
                    <option value="@a.Item1">@a.Item2</option>
                }
                </select>
        </div>
        <div class="form-group">
            <label asp-for="Note">Note</label>
            <textarea asp-for="Note" class="form-control" id="exampleFormControlTextarea1" rows="3">Note</textarea>
            <span asp-validation-for="Note" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="IncomeDate">Date</label>
            <input asp-for="IncomeDate" class="form-control" type="date"/>
            <span asp-validation-for="IncomeDate" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-5">Add</button>
    </form>
</div>

