@using Microsoft.EntityFrameworkCore;
@inject MyContext Ctx

@{
    var incomes = Ctx.Incomes.Include(i=>i.Account).Include(i=>i.Category).OrderByDescending(e => e.Id).Take(10).ToList();
    ViewData["Title"] = "Incomes";
}

<h1>Incomes</h1>

<div class="btn-group" role="group">
    <a asp-action="AddIncome" class="btn btn-success active">Add new Income</a>
</div>


<table class="table table-success table-striped-columns">
<thead>
        <tr>
            <th scope="col">Amount</th>
            <th scope="col">Category</th>
            <th scope="col">Account</th>
            <th scope="col">Note</th>
            <th scope="col">Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var income in incomes)
        {
            <tr>
                <td>@income.Amount</td>
                <td>@income.Category.Name</td>
                <td>@income.Account.AccountName</td>
                <td>@income.Note</td>
                <td>@income.IncomeDate</td>
            </tr>
        }
    </tbody>
</table>
